generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           Int     @id @default(autoincrement())
    username     String  @unique
    email        String  @unique
    password     String
    refreshToken String  @default("")
    type         String  @default("user")
    avatarId     Int
    avatar       Avatar? @relation(fields: [avatarId], references: [id]) // Defines the foreign key

}

model Element {
    id       Int     @id @default(autoincrement())
    imageUrl String  @default("")
    width    Int     @default(1)
    height   Int     @default(1)
    static   Boolean @default(true)

}

model Avatar {
    id       Int     @id @default(autoincrement())
    imageUrl String
    name     String
    users    User[]  @relation("User") // Matches the relation defined in User

}